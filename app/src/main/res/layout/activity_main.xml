<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.co.passionit.buildinglayoutpart1.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen250dp"
        android:src="@drawable/pp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_marginStart="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/dimen20sp"
        android:text="@string/nama"/>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_place"/>
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/dimen20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alamat"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_date"/>
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/dimen20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ttl"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_school"/>
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/dimen18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pendidikan"/>
    </LinearLayout>



</LinearLayout>
